<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- Disable cloud backup of sensitive data -->
    <cloud-backup>
        <!-- Include all app data first -->
        <include domain="file" path="." />
        <include domain="sharedpref" path="." />
        
        <!-- Then exclude sensitive data from backup -->
        <exclude domain="database" />
        <exclude domain="sharedpref" path="flutter_secure_storage*" />
        <exclude domain="sharedpref" path="*encryption*" />
        <exclude domain="sharedpref" path="*auth*" />
        <exclude domain="sharedpref" path="*token*" />
        <exclude domain="file" path="flutter_secure_storage/" />
        <exclude domain="file" path="Hive/" />
    </cloud-backup>
    
    <!-- Disable device transfer of sensitive data -->
    <device-transfer>
        <!-- Include all app data first -->
        <include domain="file" path="." />
        <include domain="sharedpref" path="." />
        
        <!-- Then exclude sensitive data from device transfer -->
        <exclude domain="database" />
        <exclude domain="sharedpref" path="flutter_secure_storage*" />
        <exclude domain="sharedpref" path="*encryption*" />
        <exclude domain="sharedpref" path="*auth*" />
        <exclude domain="sharedpref" path="*token*" />
        <exclude domain="file" path="flutter_secure_storage/" />
        <exclude domain="file" path="Hive/" />
    </device-transfer>
</data-extraction-rules>
