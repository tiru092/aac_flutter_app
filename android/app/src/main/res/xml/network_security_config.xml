<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default configuration for all domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">firebaseapp.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">firestore.googleapis.com</domain>
        <domain includeSubdomains="true">firebase.googleapis.com</domain>
        <domain includeSubdomains="true">firebasestorage.googleapis.com</domain>
        
        <!-- Certificate pinning for enhanced security (optional) -->
        <!-- Uncomment and configure for production deployment -->
        <!--
        <pin-set expiration="2026-01-01">
            <pin digest="SHA-256">HASH_OF_FIREBASE_CERT</pin>
        </pin-set>
        -->
    </domain-config>
    
    <!-- Debug configuration (only for debug builds) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
    
    <!-- Base configuration - enforce HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
